                </div>
                <a class='logo' href="/"><img src="/images/logo-gnjfarma.png"></a>
                <div class="search-bar">
                    <input type="text" class="searchTerm" placeholder="Buscar">
                    <button type="submit" class="searchButton">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
                <a href="/login">
                    <div class="user">
                        <i class="far fa-user"></i>
                    </div>
                </a>
                <a href="/cart">
                    <div class="my-cart">
                        <i class="fas fa-shopping-cart"></i>
                        <div class="my-order">Mi compra</div>
                    </div>
                </a>
            </div>
            <div class="burger-menu-items" id="burger-menu-items">
                <div class="burger-menu-item">
                    <a href="#">
                        Salud
                        <i class="fas fa-angle-down"></i>
                        <i class="fas fa-angle-up"></i>
                    </a>
                    <ul>
                        <li><a href="">Higiene personal</a></li>
                        <li><a href="">Higiene oral</a></li>
